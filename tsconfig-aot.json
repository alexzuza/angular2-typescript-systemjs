{
  "compilerOptions": {
    "target": "es5",
    "outDir": "aot",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "include": ["app/**/*.ts"],

  "angularCompilerOptions": {
    "skipMetadataEmit" : true
  }
}
